<%- include('partials/header') %>

<h1 id="cardHeading"><%= category.toUpperCase() %></h1>
<div class="row row-cols-1 row-cols-md-3 g-4">

    <% for(let news of newsData) { %>
    <div class="col-lg-4 col-md-6">
        <div class="card" style="width: 18rem;">
            <img src= <%= news.image %> class="card-img-top" alt="#">
            <div class="card-body">
                <h5 class="card-title"><%= news.title %></h5>
                <p class="card-text"><%= news.description.slice(0,100) + '...' %></p>
                <p class="card-text"><small class="text-muted"><%= news.publishedAt %> | <%= news.source.name %></small></p>
                <a href="/<%= category %>/<%= news.id %>" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
<% } %>f
