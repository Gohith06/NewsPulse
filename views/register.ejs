<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NewsPulse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/login.css">
    </head>
<body>

    <section class="vh-100">
        <div class="container py-5 h-100">
          <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6 ">
              <img src="/css/reg.jpg" class="img-fluid" alt=" image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form id="registrationForm" action="/register" method="POST" onsubmit="return validateForm()">
                
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="text" id="form1Example13" name="username" class="form-control form-control-lg" placeholder="Username"/>
                  
                </div>
      
                
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="password" id="form1Example23" name="password" class="form-control form-control-lg" placeholder="Password" />
                  
                </div>
      
                
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Sign up</button>
      
                <div class="divider d-flex align-items-center my-4">
                  <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                </div>
      
                <a data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                  role="button">
                  <i class="fa fa-google m-2" aria-hidden="true"></i>Continue with Google
                </a>

                <div style="margin-top: 10px;">
                  <p>Already have an account? <span><a href="/login">Sign in</a></span></p> 
                </div>
                
              </form>
            </div>
          </div>
        </div>
      </section>
      <script src="https://kit.fontawesome.com/63b6c5070d.js" crossorigin="anonymous"></script>

      <script>
        function validateForm() {
            var username = document.getElementById("form1Example13").value;
            var password = document.getElementById("form1Example23").value;
            
            if (username === "" || password === "") {
                alert("Fields can't be empty");
                return false;
            }

            return true;
        }
    </script>
</body>
</html>